{% extends "base.njk" %}

{% block title %}
    Messages
{% endblock %}

{% block content %}
<h1>Mensajes</h1>
<form id="messageForm" autocomplete="off">
    <label for="message">Nuevo mensaje:</label>
    <input type="text" id="message" name="message" required>
    <button type="submit">Enviar</button>
</form>
<ul id="messagesList">
{% for message in messages | reverse %}
    <li><b>{{ message.user_name }}</b>: {{ message.content }}</li>
{% endfor %}
</ul>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const form = document.getElementById('messageForm');
    const input = document.getElementById('message');
    const messagesList = document.getElementById('messagesList');
    const userId = {{ user.id if user.id else 0 }};

socket.on('messages', function(messages) {
    messagesList.innerHTML = '';
    messages.slice().reverse().forEach(function(msg) {
        const li = document.createElement('li');
        li.innerHTML = `<b>${msg.user_name}</b>: ${msg.content};
        messagesList.appendChild(li);
    });
});

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        if (input.value.trim()) {
            socket.emit('newMessage', { user_id: userId, content: input.value });
            input.value = '';
        }
    });
</script>
{% endblock %}